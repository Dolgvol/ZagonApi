{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es6"],
    "baseUrl": "./src",
    "outDir": "./dist",
    "preserveWatchOutput": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}
